@model AdminCampana_2020.ViewModels.PersonaVM

<div>
    <form id="myForm" enctype="multipart/form-data">

        @Html.HiddenFor(model => model.Id)

        <div class="bs-container">

            <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                <img alt="user Pic" src="~/Image/Logo_Partido.png" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
            </div>
            <div class="row">
                <div class="col-lg-7">
                    <div class="form-group">
                        <label>Nombre:</label>
                        @Html.TextAreaFor(model => model.StrEmail, new { @class = "form-control input-sm", id = "StrEmail" })
                    </div>
                    <div class="form-group">
                        <a href="#" id="btnSubmit" class="btn btn-success"><span><i class=""></i>Actualizar Datos</span></a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
